@model ItemViewModel
@{
    ViewData["Title"] = "Create Page";
}

<!DOCTYPE html>
<form asp-controller="Item" asp-action="Create" method="post">
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" asp-for="Name" />
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label>Price</label>
                <input class="form-control" asp-for="Price" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" asp-for="Description"></textarea>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-8">
            <div class="form-group">
                <label>Category</label>
                <select class="form-control" asp-items="@((SelectList)ViewData["Categories"])" asp-for="Category">Dropdown</select>
            </div>
        </div>
    </div>
    <div class="row">
        <button class="btn btn-success col-1 mr-2" type="submit">Create</button>
        <a class="btn btn-danger col-1" asp-action="Index" asp-controller="Item">Back</a>
    </div>
    
</form>
